<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

    
<mapper namespace="com.checkin.web.dao.MyStampDao">
	
	
     <select id="getList" resultType="com.checkin.web.entity.MyStamp">
        select * from bookmark_stamp where Member_id = #{id}
     </select> 
     
     
     <select id="getStampCount" resultType="int">
        select count(*) from bookmark_stamp where Member_id = #{id}
     </select>
     
     <select id="getMyCount" resultType="int">
        select count(*) from bookmark_stamp where stamp_route_id = #{id}
     </select>
     
        
     <insert id="insert" parameterType="com.checkin.web.entity.MyStamp">
     	insert into bookmark_stamp(stamp_route_id, Member_id)
     	values(#{bookstoreID}, #{memberId})
     </insert>
     
     
     <delete id="delete" parameterType="int">
     	delete from bookmark_stamp where stamp_route_id = #{id} 
     </delete>
</mapper>